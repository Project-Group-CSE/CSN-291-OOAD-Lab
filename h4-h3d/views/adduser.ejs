<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <title>HTML5 Login Form with validation Example</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css" />
  <link rel="stylesheet" href="./style.css" />
  <style>
    #login-form-wrap {
      background-color: #fff;
      width: 35%;
      margin: 30px auto;
      text-align: center;
      padding: 20px 0 0 0;
      border-radius: 17px;
      box-shadow: 0px 30px 50px 0px rgba(0, 0, 0, 0.2);
      margin-top: 30px;
    }

    .login_block {
      margin-top: 10%;
    }

    .button-21 {
          align-items: center;
          appearance: none;
          background-color: #3EB2FD;
          background-image: linear-gradient(1deg, #4F58FD, #149BF3 99%);
          background-size: calc(100% + 20px) calc(100% + 20px);
          border-radius: 100px;
          border-width: 0;
          box-shadow: none;
          box-sizing: border-box;
          color: #FFFFFF;
          cursor: pointer;
          display: inline-flex;
          font-family: CircularStd, sans-serif;
          font-size: 1rem;
          height: auto;
          justify-content: center;
          line-height: 1.5;
          padding: 6px 20px;
          position: relative;
          text-align: center;
          text-decoration: none;
          transition: background-color .2s, background-position .2s;
          user-select: none;
          -webkit-user-select: none;
          touch-action: manipulation;
          vertical-align: top;
          white-space: nowrap;
        }

        .button-21:active,
        .button-21:focus {
          outline: none;
        }

        .button-21:hover {
          background-position: -20px -20px;
        }

        .button-21:focus:not(:active) {
          box-shadow: rgba(40, 170, 255, 0.25) 0 0 0 .125em;
        }
        input.inputfield {
        width: 22rem;
        height: 50px
      }
    
  </style>
</head>

<body>
  <div class="login_block">
    <div id="login-form-wrap">
      <h2>Add Credentials</h2>
      <div id="login-form">

        <p>
          <input type="text" id="title" name="title" placeholder="Title" required class="inputfield"/><i
            class="validation"><span></span><span></span></i>
        </p>
        <p>
          <input type="text" id="name" name="name" placeholder="Username" required class="inputfield"/><i
            class="validation"><span></span><span></span></i>
        </p>
        <p>
          <input type="email" id="website" name="website" placeholder="Website" required class="inputfield"/><i
            class="validation"><span></span><span></span></i>
        </p>
        <p>
          <input type="text" id="user" name="user" placeholder="Website Username" required class="inputfield"/><i
            class="validation"><span></span><span></span></i>
        </p>
        <p>
          <input type="password" id="password" name="password" placeholder="Password" required class="inputfield"/><i
            class="validation"><span></span><span></span></i>
        </p>
        <p>
          <input type="password" id="pin" name="pin" placeholder="Pin" required class="inputfield"/><i
            class="validation"><span></span><span></span></i>
        </p>

        <p>
          <button id="button" class="button-21" role="button">Add Credential</button>
        </p>
        <div id="create-account-wrap">

          <p></p>
        </div>


      </div>

    </div>
    <script>
      
      document.getElementById("button").addEventListener("click", function () {
        const title = document.getElementById("title").value;
        var website = document.getElementById("website").value;
        const username = document.getElementById("name").value;
        const websiteUsername = document.getElementById("user").value;
        const password = document.getElementById("password").value;
        const pin = document.getElementById("pin").value;
        if (!website.startsWith('http://') && !website.startsWith('https://')) {
          website = 'https://' + website;
    }

   
    if (!website.includes('www.')) {
      website = website.replace('://', '://www.');
    }

        const data = {
          title: title,
          user_name: username,
          website_username: websiteUsername,
          website: website,
          hash_pwd: password,
          pin: pin,
          session_token: localStorage.getItem('token'),
        };
        fetch('http://127.0.0.1:8000/hashed/credentials/', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(data),
        })
          .then((response) => {
            if (response.status == 201) {
              document.getElementById("title").value = "";
              document.getElementById("website").value = "";
              document.getElementById("name").value = "";
              document.getElementById("user").value = "";
              document.getElementById("password").value = "";
              document.getElementById("pin").value = "";
              location.reload();
            }
            if(response.status==401){
              alert("Invalid PIN. Please try again.");
              document.getElementById("password").value = "";
              document.getElementById("pin").value = "";
              return;

            }

          })

          .catch((error) => {

          });
      });

    </script>
</body>

</html>